<div class="form-container col-lg-6">
  <%= simple_form_for @document do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :description %>
    <%= f.input :important %>
    <%= f.association :user, collection: User.where('type = ?', 'Users::Owner') %>
    <%= f.submit 'Valider', class: 'btn btn-success' %>
  <% end %>
</div>
